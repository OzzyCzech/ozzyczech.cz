	"scripts": {
		"build": "yarn build:content && yarn build:css",
		"build:content": "node --experimental-modules index.js",
		"build:css": "tailwindcss -i ./src/style.css -o ./public/style.css",
		"start": "serve public | onchange index.js './content/**/*.*' './src/**/*.*' './static/**/*.*' -- yarn build"
	},
	"devDependencies": {
		"onchange": "^7.1.0",
		"serve": "^14.0.1"
	},
	"type": "module",
	"engines": {
		"node": ">=14"
	},
	"dependencies": {
		"@sindresorhus/slugify": "^2.1.1",
		"@sphido/core": "^2.0.13",
		"@sphido/frontmatter": "^2.0.2",
		"@sphido/hashtags": "^2.0.13",
		"@sphido/sitemap": "^2.0.10",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.7",
		"fs-extra": "^10.1.0",
		"globby": "^13.1.2",
		"marked": "^4.1.1",
		"md5": "^2.3.0",
		"prismjs": "^1.29.0",
		"tailwindcss": "^3.2.0"
	}
